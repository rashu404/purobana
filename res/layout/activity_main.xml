<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.webprog.render.MyRenderer
        android:id="@+id/renderer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/noon_or_dark_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:text="昼夜切替" />

        <Button
            android:id="@+id/start_domino_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_media_play"
            android:text="ドミノ開始" />

        <Button
            android:id="@+id/init_cube_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:text="初期位置" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/analog_stick_layout"
        android:layout_width="140dip"
        android:layout_height="140dip"
        android:layout_gravity="bottom|left"
        android:orientation="vertical" >
    </LinearLayout>

</FrameLayout>